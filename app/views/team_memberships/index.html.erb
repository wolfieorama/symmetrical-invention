<p id="notice"><%= notice %></p>

<h1>Listing Team Memberships</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_memberships.each do |team_membership| %>
      <tr>
        <td><%= team_membership.employee %></td>
        <td><%= team_membership.team %></td>
        <td><%= link_to 'Show', team_membership %></td>
        <td><%= link_to 'Edit', edit_team_membership_path(team_membership) %></td>
        <td><%= link_to 'Destroy', team_membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

